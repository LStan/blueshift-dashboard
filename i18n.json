{
  "version": 1.8,
  "locale": {
    "source": "en",
    "targets": [
      "vi"
    ]
  },
  "buckets": {
    "mdx": {
      "include": [
        "messages/[locale]/*.json",
        "src/app/content/challenges/*/[locale]/*.mdx",
        "src/app/content/challenges/*/[locale]/pages/*.mdx",
        "src/app/content/courses/*/*/[locale].mdx"
      ]
    }
  },
  "$schema": "https://lingo.dev/schema/i18n.json"
}